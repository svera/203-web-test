web1:
  name: svera
  shared_writable_dirs:
    - /storage/cache
    - /storage/database
    - /storage/logs
    - /storage/sessions
    - /storage/views
    - /storage/work
  document_root: public
  php_version: 5.4.14
  php_extensions:
    - pdo_mysql
    - mcrypt
    - curl
    - zip
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-source"
  before_deploy:
    - "php artisan migrate"
  after_deploy:
    - "php artisan cache:clear"
    - "rm -f app/storage/views/*"